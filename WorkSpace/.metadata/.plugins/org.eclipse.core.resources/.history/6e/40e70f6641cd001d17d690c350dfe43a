package pack02_byte;

public class Ex01_Byte {
	public static void main(String[] args) {
		// { } <= main 지역
		// byte 타입의 변수를 선언해보기 var1.
		// byte 타입의 변수 var1에 값 0을 할당해보기.
		// byte 타입의 변수 var2를 10을 주고 초기화 해보기.
		// 변수타입 변수명 ; <= 선언
		// 선언된변수 = 값 ; <= 할당 
		byte var1 ; 
		var1 = 0 ; 
		byte var2 = 10;
		// byte는 관련 된 8개의 비트들로 구성되어있음.
		// bit 0또는 1 두가지정보를 표현할 수 있는 
		// 최소한의 정보 표현 단위 입니다.
		// -128 ~ 127 표현 가능
	}
}
